#!/bin/bash
# revoke - Revoke an SSL certificate, specified by a short hostname.
# revoke <shorthostname>

# Find self.
cd "${0%/*}/.."
certificate-authority="${PWD}"
cd "${OLDPWD}"

# Load libraries.
libs=(
  'revoke_sanity'
  'revoke_host'
)
if ! . "${certificate-authority}/lib/common.sh"; then
  echo "Failed to load common dependencies." >&2
  exit 1
fi

# sanity check
revoke_sanity "${@}"

# revoke
revoke_host
