#!/bin/bash

# Find self.
cd "${0%/*}/.."
certificate-authority="${PWD}"
cd "${OLDPWD}"

# Load libraries.
libs=(
  'generate_sanity'
  'generate_conf'
  'generate_ca_root'
  'generate_ca_intermediate'
  'generate_host'
)
if ! . "${certificate-authority}/lib/common.sh"; then
  echo "Failed to load common dependencies." >&2
  exit 1
fi

generate_sanity
generate_ca_root
generate_ca_intermediate
if test 'no' = "${ca_only}"; then
  generate_host "${@}"
fi
